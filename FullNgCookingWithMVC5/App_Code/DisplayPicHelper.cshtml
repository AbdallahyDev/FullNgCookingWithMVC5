@helper DisplayPicture(Byte[] pic, string alt, string src)
{
var base64 = Convert.ToBase64String(pic);
var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
string classValue = "";
switch (src)
{
    case "user":
        classValue = "avatar";
        break;
    case "ing":
        classValue = "item-img";
        break;
    default:
        break;
}
    <img class="@classValue" src="@imgSrc" alt="@alt">
}



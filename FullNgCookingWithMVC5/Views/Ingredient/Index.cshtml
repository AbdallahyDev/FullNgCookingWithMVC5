<div class="col-xs-12 col-sm-9">
    <div class="content" id="content_ingredients">
        <h1 class="page-title">Les ingredients</h1>

        <div class="row">
            <div class="col-xs-12">
                <div class="panel">
                    <div class="row imgback">
                        <div class="hidden-xs col-sm-3"></div>
                        <div class="col-xs-12 col-sm-9 fp">
                            <div class="filters">
                                <form action="#" novalidate>
                                    <div class="filter">
                                        <p><label for="">Nom de l'ingrédient</label></p>
                                        <p><input id="ingName" type="text" onchange="getFilteredIngredients()" placeholder="ex: Banane"></p>
                                    </div>
                                    <div class="filter">
                                        <p><label for="">Catégorie</label></p>
                                        <p>
                                            <select name="" id="categorie" onchange="getFilteredIngredients()">
                                                <option value=""></option>
                                                <option value="meat">Viandes</option>
                                                <option value="fruit">Fruits</option>
                                                <option value="vegetable">Légumes</option>
                                                <option value="fish">Poissons</option>
                                                <option value="alcool">Alcools</option>
                                                <option value="">Etc...</option>
                                            </select>
                                        </p>
                                    </div>
                                    <div class="filter">
                                        <p><label for="">Nombre de calories <span class="fwn">(kcal/100g)</span></label></p>
                                        <p>
                                            <span class="span-label">entre :</span>
                                            <input id="minCalorieValue" type="number" class="mr0" placeholder="ex: 70" onchange="getFilteredIngredients()">
                                            <span class="span-label">et</span>
                                            <input id="maxCalorieValue" type="number" placeholder="ex: 220" onchange="getFilteredRecette()">
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="result">
                    <div class="ingredients row">
                        @if (ViewBag.filteredIngredients != null)
                        {
                            if (ViewBag.filteredIngredients.Count > 0)                  
                            {
                                <p class="col-xs-12 blank">Ingredients trouvés</p>
                                foreach (var item in ViewBag.filteredIngredients)           
                                {
                                    <div class="col-xs-12 ingredient">
                                        <div class="ing-wrap">
                                            <div class="top">
                                                <p class="name">@item.Name</p>
                                                <p class="category">@item.Category</p>
                                                @DisplayPicHelper.DisplayPicture(item.Picture, item.Name, "ing")
                                                <div class="calories-wrap">
                                                    <div class="val">
                                                        <span>@item.Calories kcal</span>
                                                        <div class="battery">
                                                            <!-- pourcentage ci-dessous à moduler en fonction du nombre de calories de l'ingredient sur nombre de calories max -->
                                                            <div class="level" style="width: 60%;"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="bot">
                                                </div>
                                                <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quo pariatur obcaecati ut, sit veniam molestias eius cum. Facere quibusdam laborum doloribus, incidunt omnis ipsum alias vel est molestiae.</p>
                                                <div class="list">
                                                    <p class="list-title">Aliments similaires</p>
                                                    <ul>
                                                        <li class="item">
                                                            <img class="item-img" src="~/img/ingredients/boeuf.jpg" alt="Boeuf">
                                                            <p class="item-name" title="Boeuf">Boeuf</p>
                                                        </li>
                                                        <li class="item">
                                                            <img class="item-img" src="~/img/ingredients/thon.jpg" alt="thon">
                                                            <p class="item-name" title="Thon">Thon</p>
                                                        </li>
                                                        <li class="item">
                                                            <img class="item-img" src="~/img/ingredients/oeuf.jpg" alt="Oeuf">
                                                            <p class="item-name" title="Oeuf">Oeuf</p>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="col-xs-12 blank">Aucun ingredient ne correspond à votre recherche</p>
                            }

                        }
                        else
                        {

                            foreach (var item in Model)
                            {
                                <div class="col-xs-12 ingredient">
                                    <div class="ing-wrap">
                                        <div class="top">
                                            <p class="name">@item.Name</p>
                                            <p class="category">@item.Category</p>
                                            @DisplayPicHelper.DisplayPicture(item.Picture, item.Name, "ing")
                                            <div class="calories-wrap">
                                                <div class="val">
                                                    <span>@item.Calories kcal</span>
                                                    <div class="battery">
                                                        <!-- pourcentage ci-dessous à moduler en fonction du nombre de calories de l'ingredient sur nombre de calories max -->
                                                        <div class="level" style="width: 60%;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="bot">
                                            <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quo pariatur obcaecati ut, sit veniam molestias eius cum. Facere quibusdam laborum doloribus, incidunt omnis ipsum alias vel est molestiae.</p>
                                            <div class="list">
                                                <p class="list-title">Aliments similaires</p>
                                                <ul>
                                                    <li class="item">
                                                        <img class="item-img" src="~/img/ingredients/boeuf.jpg" alt="Boeuf">
                                                        <p class="item-name" title="Boeuf">Boeuf</p>
                                                    </li>
                                                    <li class="item">
                                                        <img class="item-img" src="~/img/ingredients/thon.jpg" alt="thon">
                                                        <p class="item-name" title="Thon">Thon</p>
                                                    </li>
                                                    <li class="item">
                                                        <img class="item-img" src="~/img/ingredients/oeuf.jpg" alt="Oeuf">
                                                        <p class="item-name" title="Oeuf">Oeuf</p>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="row showmore">
                    <div class="col-xs-12">
                        <button type="button" class="btn btn_color1"><span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>

            window.onbeforeunload = function () {
            var nam = $("#recetteName").val();
            localStorage.setItem("recetteSubName", $("#recetteName").val());
            var ingName = $("#ingredients").val();
            localStorage.setItem("ingredientsName", $("#ingredients").val());
            var minCalorieValue = $("#minCalorieValue").val();
            localStorage.setItem("minCalorieValue", $("#minCalorieValue").val());
            var maxCalorieValue = $("#maxCalorieValue").val();
            localStorage.setItem("maxCalorieValue", $("#maxCalorieValue").val());
            }

        window.onload = function () {       
            var name = localStorage.getItem("recetteSubName");
            if (name !== null) $("#recetteName").val(name);
            var ingName = localStorage.getItem("ingredientsName");
            if (ingName !== null) $("#ingredients").val(ingName);
            var minCalorieValue = localStorage.getItem("minCalorieValue");
            if (minCalorieValue !== null) $("#minCalorieValue").val(minCalorieValue);
            var maxCalorieValue = localStorage.getItem("maxCalorieValue");      
            if (maxCalorieValue !== null) $("#maxCalorieValue").val(maxCalorieValue);
        }

        function getFilteredIngredients() {
            var minCalorieValue = $("#minCalorieValue").val();
            var maxCalorieValue = $("#maxCalorieValue").val();
            var subIngName = $("#ingName").val();
            var categorie = $("#categorie").val();      
            var i = 10;
            $.ajax({
                url: '/Ingredient/getFilteredIngredients/',
                type: "POST",
                dataType: "JSON",
                data: { subIngName: subIngName, categorie: categorie, minCalorieValue: minCalorieValue, maxCalorieValue: maxCalorieValue },
                success: function (ingredients) {
                    alert("ça marche..");
                    window.location.reload();
                }
            });

        }
    </script>
}
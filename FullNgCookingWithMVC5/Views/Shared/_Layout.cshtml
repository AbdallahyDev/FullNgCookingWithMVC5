    @using FullNgCookingWithMVC5.Controllers;
    @{

        RecetteController recetteCntrl = new RecetteController();
    }
    <div id="wrapper">
        <header id="header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <a href="/" class="logo">
                            <img src="~/img/logo_header.png" alt="">
                        </a>
                        <div class="desc">
                            <p>Partagez vos meilleures recettes avec<br />la communauté NgCooking</p>
                            @{
                                var route = this.Request.Path;
                                string homeClassAttribute = "";
                                string recetteClassAttribute = "";
                                string ingredientClassAttribute = "";
                                string communauteClassAttribute = "";
                                switch (route)
                                {
                                    case "/":
                                        homeClassAttribute = "active";
                                        break;
                                    case "/Home":
                                        homeClassAttribute = "active";
                                        break;
                                    case "/Recette":
                                        recetteClassAttribute = "active";
                                        break;
                                    case "/Ingredient":
                                        ingredientClassAttribute = "active";
                                        break;
                                    case "/Community":
                                        communauteClassAttribute = "active";
                                        break;
                                    default:
                                        break;
                                }
                            }

                            <p><a class="link" href="home.html"><strong>@recetteCntrl.getAll().Count() recettes</strong> à découvrir !</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" id="mobile-menu-btn">
                <i class="glyphicon glyphicon-menu-hamburger"></i>
            </button>
        </header>

        <!--@Html.ActionLink("Nom d'application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
        <main id="main">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3" id="col-nav">
                        <button type="button" id="mobile-close-btn">
                            <i class="glyphicon glyphicon-remove"></i>
                        </button>
                        <nav id="nav">
                            <ul class="menu">  
                                    
                                <li class="page_hom  @homeClassAttribute">
                                    @Html.ActionLink("Accueil", "Index", "Home")
                                </li>
                                <li class="page_rec @recetteClassAttribute">
                                    @Html.ActionLink("Recettes", "Index", "Recette")
                                </li>
                                <li class="page_ing @ingredientClassAttribute"> 
                                    @Html.ActionLink("Ingredients", "Index", "Ingredient")
                                </li>
                                <li class="page_com @communauteClassAttribute"> 
                                    @Html.ActionLink("Communauté", "Index", "Community")
                                </li> 
                            </ul> 
                            <div class="account-area"> 
                                @if (true)
                                {
                                    Html.RenderPartial("~/Views/Shared/_LoginPartial.cshtml");  
                                } 
                                @*<button type="button" class="button connect" data-popin-open="connect_popin"><span class="icon"></span>Connexion</button>
                                <a href="communaute_details.html" class="button account"><span class="icon"></span>Mon profil</a>
                                <button type="button" class="button deconnect"><span class="glyphicon glyphicon-off"></span>Deconnexion</button>  
                                <span class="button connect" > @Html.ActionLink("Inscription", "Register", "Account")</span>*@       
                            </div>
                        </nav>
                    </div>
                    

                    @RenderBody()

                </div>
            </div>
        </main>
        <footer id="footer">
            <div class="container">
                <div class="row cuisto-img-wrap">
                    <div class="hidden-xs col-sm-3">
                        <div class="cuisto-img"></div>
                    </div>
                    <div class="col-xs-12 col-sm-9">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Esse optio repellat temporibus molestiae ducimus quibusdam eum maiores voluptatum sapiente reprehenderit. Est, modi, tenetur. Tempora perferendis eveniet unde numquam cupiditate nam?</p>
                        <div class="hr"></div>
                        <p class="copyright">Copyright @@ngcooking 2015-2016</p>
                    </div>
                </div>
            </div>
        </footer>


        @Scripts.Render("~/bundles/jquery")
        @*@Scripts.Render("~/bundles/bootstrap")*@
        @RenderSection("scripts", required: false)
    </div> 

    <div class="popin" data-popin="connect_popin">
        <div class="popin-content">
            <div class="popin-scroll">
                <p class="popin-title">Connexion</p>
                <form action="#">
                    <p>
                        <label for="co_user" class="fwb">Identifiant (email)</label>
                        <input id="co_user" class="wide" type="text" />
                    </p>
                    <p>
                        <label for="co_pwd" class="fwb">Mot de passe</label>
                        <input id="co_pwd" class="wide" type="text" />
                    </p>
                    <p class="ac nm mt2">
                        <button type="button" class="btn btn_big btn_color1"><span class="glyphicon glyphicon-ok"></span><span class="fwb uc">Valider</span></button>
                    </p>
                </form>
            </div>
            <button class="close popin-close"><span class="glyphicon glyphicon-remove"></span></button>
        </div>
        <div class="popin-backlayer"></div>
    </div>

</body>
